{
  "name": "hostman",
  "version": "1.0.0",
  "description": "An interface to manage your system's hosts file, and does a bit more!",
  "bin": {
    "hostman": "./hostman.js"
  },
  "scripts": {
    "debug-nodmon": "nodemon --inspect -i ./app/views/ -i ./app/assets/ -i ./package*.json -i ./.vscode/ hostman.js",
    "debug": "gulp default",
    "postinstall": "node install/postinstall.js",
    "preuninstall": "echo \"TODO: kill any running hostman services\"",
    "postuninstall": "echo \"TODO: remove the hostman host binding from the hosts file\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thebrenny/hostman.git"
  },
  "keywords": [
    "hosts",
    "dns"
  ],
  "author": "TheBrenny <iam@justbrenny.me>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/thebrenny/hostman/issues"
  },
  "homepage": "https://github.com/thebrenny/hostman#readme",
  "dependencies": {
    "hosts-etc": "^1.1.0",
    "readline-sync": "^1.4.10",
    "scetch": "^1.2.0",
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "browser-sync": "^2.26.12",
    "gulp": "^4.0.2",
    "gulp-nodemon": "^2.5.0",
    "gulp-sass": "^4.1.0",
    "nodemon": "^2.0.4"
  },
  "nodemonConfig": {
    "ignore": [
      "app/public/views/",
      "app/public/assets/"
    ],
    "watch": [
      "hostman.js",
      "app/"
    ]
  }
}
