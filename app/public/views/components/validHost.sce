<div class="row host" hash="[[hash]]">
    <input placeholder="hostname" type="text" class="hostname" value="[[host]]">
    <input placeholder="address" type="text" class="address" value="[[address]]">
    <div class="actions">
        <img class="tick hostAction" alt="Submit" hidden="true">
        <img class="delete hostAction" alt="Delete">
        <img class="cancel hostAction" alt="Cancel" hidden="true">
        <img class="spinner hostAction" alt="Waiting" hidden="true">
    </div>
</div>